doctype html
head
  title Login Form
  link(rel='stylesheet' type='text/css' href='css/style.css')
  link(href='https://fonts.googleapis.com/css?family=Poppins:600&display=swap' rel='stylesheet')
  script(src='https://kit.fontawesome.com/a81368914c.js')
  meta(name='viewport' content='width=device-width, initial-scale=1')
img.wave(src='img/wave.png')
script(src='./js/geocodings.js')
.container
  .img
    img(src='img/bg.svg')
  .login-content
    form(action='/user2' method="POST")
      img(src='img/avatar.svg')
      h2.title Welcome
      .input-div.one
        .i
          i.fas.fa-user
      .input-div.mail
        .i
          i.fas.fa-envelope
        .div
          label(for="drop_point") Drop Point
          input#drop_point.input(type='text' placeholder='' name='drop_point' required='required ')
      input#submit(type="Submit" value="SUBMIT")
script(type='text/javascript' src='/js/main.js')
